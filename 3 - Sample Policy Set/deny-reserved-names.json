{
 "properties": {
  "displayName": "Deny reserved names for Azure resources",
  "policyType": "Custom",
  "mode": "All",
  "description": "Ensure that a specific set of names cannot be used to create Azure resources",
  "metadata": {
   "category": "General",
   "createdBy": "f00c5d96-8aca-49b0-991c-891500ead0af",
   "createdOn": "2020-03-29T16:51:56.8807946Z",
   "updatedBy": null,
   "updatedOn": null
  },
  "parameters": {
   "namePattern": {
    "type": "String",
    "metadata": {
     "displayName": "Name Pattern",
     "description": "Pattern for reserved names. Can include ? for letters and # for numbers or * for a wildcard."
    }
   },
   "blackList": {
    "type": "Array",
    "metadata": {
     "displayName": "Reserved Names",
     "description": "Blacklist used for Azure resource names. Cannot include wildcards."
    }
   }
  },
  "policyRule": {
   "if": {
    "anyOf": [
     {
      "field": "name",
      "matchInsensitively": "[parameters('namePattern')]"
     },
     {
      "field": "name",
      "like": "[parameters('namePattern')]"
     },
     {
      "field": "name",
      "contains": "[parameters('namePattern')]"
     },
     {
      "field": "name",
      "in": "[parameters('blackList')]"
     }
    ]
   },
   "then": {
    "effect": "deny"
   }
  }
 },
 "id": "/providers/Microsoft.Management/managementGroups/19bb061f-570f-4487-bdc6-86990c8773d7/providers/Microsoft.Authorization/policyDefinitions/cbacc846-3441-4372-b437-dcc6fce4a72e",
 "type": "Microsoft.Authorization/policyDefinitions",
 "name": "cbacc846-3441-4372-b437-dcc6fce4a72e"
}